<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_social"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.juliazluo.www.mdbsocials.NewSocialActivity">

    <EditText
        android:layout_width="236dp"
        android:layout_height="57dp"
        android:inputType="textAutoCorrect|textMultiLine|textShortMessage"
        android:ems="10"
        android:id="@+id/description_new"
        app:layout_constraintRight_toRightOf="@+id/name_new"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/name_new"
        android:hint="Description" />

    <EditText
        android:layout_width="236dp"
        android:ems="10"
        android:id="@+id/name_new"
        android:inputType="textAutoCorrect"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.28"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:hint="Name of social" />

    <EditText
        android:layout_width="236dp"
        android:id="@+id/date_new"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/description_new"
        app:layout_constraintRight_toRightOf="@+id/description_new"
        android:hint="Date"
        android:focusable="false"/>

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_new_btn"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/add_image_btn"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="Add New Social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.22"
        android:textSize="36sp" />

    <Button
        android:text="Attach Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_image_btn"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/date_new"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

</android.support.constraint.ConstraintLayout>
